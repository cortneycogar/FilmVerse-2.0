<!DOCTYPE html>
<html>
  <head>
    <title>List of Films matching title "<%=query%>"</title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <a href="/films/search/?title=<%=query%>">List of Films matching title "<%=query%>"</a>

    <% if (items.length > 0) { %>
    <ul>
      <% items.forEach(function(item) { %>
      <li><a href="/films/<%=item._id%>/"><%=item.title%> (<%=item.year%>)</a></li>
      <% }); %>
    </ul>
    <% } else { %>
    <div>No films found.</div>
    <% } %>
    <div class="control">
      <h2>Search for films by name</h2>
      <form method="get" action="/films/search/">
        <label>Film name: <input name="title" value="<%=query%>"></label>
        <button type="submit">Search</button>
      </form>
    </div>
    <a href="/films/"><h3>Reset Search</h3></a>
  </body>
</html>
